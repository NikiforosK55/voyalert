{
  "name": "voyalert",
  "version": "0.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app:metro": "lerna run start --scope @voyalert/app",
    "app:start": "lerna run android --scope @voyalert/app --stream",
    "backend:start": "lerna run start --scope @voyalert/backend --stream",
    "start": "npm run get-ip && concurrently \"npm run app:start\" \"npm run backend:start\"",
    "app:build": "lerna run build --scope @voyalert/app",
    "backend:build": "lerna run build --scope @voyalert/backend",
    "build": "npm run app:build && npm run backend:build",
    "get-ip": "lerna run start --scope @voyalert/get-ip"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lerna": "^8.0.1"
  }
}
