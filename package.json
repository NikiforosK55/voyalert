{
  "name": "voyalert",
  "version": "0.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app:metro": "npm run start --workspace @voyalert/app",
    "app:start": "npm run android --workspace @voyalert/app",
    "backend:start": "npm run start --workspace @voyalert/backend",
    "start": "npm run getip && concurrently \"npm run app:start\" \"npm run backend:start\"",
    "app:build": "npm run build --workspace @voyalert/app",
    "backend:build": "npm run build --workspace @voyalert/backend",
    "build": "npm run app:build && npm run backend:build",
    "getip": "npm run getip --workspace @voyalert/utils",
    "cleanup": "npm run cleanup --workspace @voyalert/utils"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
